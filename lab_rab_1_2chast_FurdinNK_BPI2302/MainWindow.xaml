<Window x:Class="lab_rab_1_2chast_FurdinNK_BPI2302.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ВЫчислительное окно" Height="293" Width="438">
    <StackPanel Margin="10">
        <TextBlock Text="Введите x:"/>
        <TextBox x:Name="InputX" Margin="0,5,0,10"/>

        <TextBlock Text="Выберите функцию:"/>
        <StackPanel Orientation="Horizontal">
            <RadioButton x:Name="RadioArcSin" Content="arcsin" IsChecked="True"/>
            <RadioButton x:Name="RadioArcCos" Content="arccos" Margin="20,0,0,0"/>
        </StackPanel>

        <TextBlock Text="Выберите формат:" Margin="0,10,0,0"/>
        <StackPanel Orientation="Horizontal">
            <RadioButton x:Name="RadioRadians" Content="Радианы"/>
            <RadioButton x:Name="RadioDegrees" Content="Градусы" Margin="20,0,0,0"/>
        </StackPanel>

        <Button Content="Посчитать" Click="OnCalculate" Height="30" Margin="0,10,0,0"/>

        <TextBlock x:Name="Output" Margin="0,10,0,0" TextWrapping="Wrap"/>
    </StackPanel>
</Window>
